{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es6",
		"jsx": "react-jsx",
		"allowJs": true,
		"types": [
			"node",
			"jest"
		],
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"./src/*"
			]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"./config/types/config.ts",
		"./webpack.config.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./config/jest/*.ts",
		"./config/jest/*.tsx",
		"./src/**/*.d.ts"
	],
}